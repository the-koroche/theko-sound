{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}",
            "vmArgs": [
                // Error-reporing options
                "-XX:ErrorFile=${workspaceFolder}/logs/err/hs_err_pid%p%t.log",
                "-XX:+HeapDumpOnOutOfMemoryError",
                "-XX:HeapDumpPath=${workspaceFolder}/logs/heapdump.hprof",
                "-XX:+ShowMessageBoxOnError",
                "-XX:+UseOSErrorReporting",

                // Compilation options
                "-XX:+TieredCompilation",
                "-XX:+OptimizeStringConcat",
                
                // GC options
                "-XX:+UseG1GC",
                "-XX:MaxGCPauseMillis=500",

                // Memory options
                "-Xmx2g",
                "-Xms1g",

                // Profiling
                "-Xlog:gc*:file=${workspaceFolder}/logs/gc.log:time,tags,level,stdout",
                "-Xlog:safepoint=info:file=${workspaceFolder}/logs/safepoints.log:time,uptime,level,tags",
                // "-Xlog:jit+compilation=debug:file=${workspaceFolder}/logs/jit.log:time,uptime,level,tags",
                // "-Xlog:class+load=info:file=${workspaceFolder}/logs/classload.log:time,uptime,level",
                
                // Logging (slf4j)
                "-Dorg.slf4j.simpleLogger.defaultLogLevel=trace",
                "-Dorg.slf4j.simpleLogger.showLogName=true",
                "-Dorg.slf4j.simpleLogger.showThreadName=true",
                "-Dorg.slf4j.simpleLogger.showDateTime=true",
                "-Dorg.slf4j.simpleLogger.dateTimeFormat=yyyy-MM-dd HH:mm:ss.SSS"
            ]
        }
    ]
}